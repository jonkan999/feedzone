---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="My Account - Feed Zone">
  <div class="container mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold text-primary mb-8">Mitt konto</h1>
    
    <div id="account-container">
      <p class="text-text-muted">Loading...</p>
    </div>
  </div>
</Layout>

<script>
  import { supabase } from '../../lib/supabase-client';
  
  if (typeof window !== 'undefined') {
    async function renderAccount() {
      const container = document.getElementById('account-container');
      if (!container) return;

      const { data: { session } } = await supabase.auth.getSession();

      if (!session) {
        container.innerHTML = `
          <div class="text-center py-12">
            <p class="text-text-muted text-xl mb-4">Vänligen logga in för att se ditt konto</p>
            <a href="/account/login" class="inline-block bg-accent text-white px-6 py-3 rounded-lg hover:opacity-90 transition-opacity">
              Logga in
            </a>
          </div>
        `;
        return;
      }

      const user = session.user;

      container.innerHTML = `
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="md:col-span-2">
            <div class="bg-surface !p-6 !mb-6">
              <h2 class="text-2xl font-bold mb-4">Kontoinformation</h2>
              <div class="space-y-3">
                <div>
                  <label class="block text-sm font-semibold text-text-muted">Email</label>
                  <p class="text-lg">${user.email}</p>
                </div>
                <div>
                  <label class="block text-sm font-semibold text-text-muted">Medlem sedan</label>
                  <p class="text-lg">${new Date(user.created_at).toLocaleDateString()}</p>
                </div>
              </div>
            </div>

            <div class="bg-surface !p-6">
              <h2 class="text-2xl font-bold !mb-4">Senaste ordrar</h2>
              <div id="recent-orders">
                <p class="text-text-muted">Laddar ordrar...</p>
              </div>
              <div class="mt-4">
                <a href="/account/orders" class="text-primary hover:text-accent">Visa alla ordrar →</a>
              </div>
            </div>
          </div>
          
          <div>
            <div class="bg-surface !p-6">
              <h3 class="text-xl font-bold !mb-4">Snabbåtgärder</h3>
              <div class="space-y-3">
                <a href="/account/orders" class="block bg-primary text-white px-4 py-2 hover:opacity-90 transition-opacity text-center">
                  Visa ordrar
                </a>
                <a href="/products" class="block bg-accent text-white px-4 py-2 hover:opacity-90 transition-opacity text-center">
                  Handla produkter
                </a>
                <button 
                  id="sign-out"
                  class="w-full bg-gray-200 text-text px-4 py-2 hover:bg-gray-300 transition-colors"
                >
                  Logga ut
                </button>
              </div>
            </div>
          </div>
        </div>
      `;

      // Load recent orders
      loadRecentOrders();

      // Sign out handler
      document.getElementById('sign-out')?.addEventListener('click', async () => {
        await supabase.auth.signOut();
        await fetch('/api/auth/logout', { method: 'POST' });
        window.location.href = '/';
      });
    }

    async function loadRecentOrders() {
      try {
        const response = await fetch('/api/orders');
        const orders = await response.json();
        const container = document.getElementById('recent-orders');
        
        if (container) {
          if (orders.length === 0) {
            container.innerHTML = '<p class="text-text-muted">Inga ordrar ännu.</p>';
          } else {
            const recentOrders = orders.slice(0, 3);
            container.innerHTML = recentOrders.map((order: any) => `
              <div class="border-b pb-3 mb-3">
                <div class="flex justify-between items-start">
                  <div>
                    <p class="font-semibold">Order #${order.id.slice(0, 8)}</p>
                    <p class="text-sm text-text-muted">${new Date(order.created_at).toLocaleDateString()}</p>
                  </div>
                  <div class="text-right">
                    <p class="font-bold">$${order.total_amount.toFixed(2)}</p>
                    <span class="text-xs px-2 py-1 rounded ${getStatusColor(order.status)}">${order.status}</span>
                  </div>
                </div>
              </div>
            `).join('');
          }
        }
      } catch (error) {
        console.error('Error loading orders:', error);
      }
    }

    function getStatusColor(status: string) {
      const colors: Record<string, string> = {
        pending: 'bg-yellow-100 text-yellow-800',
        paid: 'bg-blue-100 text-blue-800',
        shipped: 'bg-purple-100 text-purple-800',
        delivered: 'bg-green-100 text-green-800',
        cancelled: 'bg-red-100 text-red-800',
      };
      return colors[status] || 'bg-gray-100 text-gray-800';
    }

    renderAccount();
  }
</script>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
</style>

