---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Order History - Feed Zone">
  <div class="container mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold text-primary mb-8">Orderhistorik</h1>
    
    <div id="orders-container">
      <p class="text-text-muted">Loading orders...</p>
    </div>
  </div>
</Layout>

<script>
  import { supabase } from '../../lib/supabase-client';
  
  if (typeof window !== 'undefined') {
    async function renderOrders() {
      const container = document.getElementById('orders-container');
      if (!container) return;

      const { data: { session } } = await supabase.auth.getSession();

      if (!session) {
        container.innerHTML = `
          <div class="text-center py-12">
            <p class="text-text-muted text-xl mb-4">Vänligen logga in för att se dina ordrar</p>
            <a href="/account/login" class="inline-block bg-accent text-white px-6 py-3 rounded-lg hover:opacity-90 transition-opacity">
              Logga in
            </a>
          </div>
        `;
        return;
      }

      try {
        const response = await fetch('/api/orders');
        const orders = await response.json();

        if (orders.length === 0) {
          container.innerHTML = `
            <div class="text-center py-12">
              <p class="text-text-muted text-xl mb-4">Inga ordrar ännu</p>
              <a href="/products" class="inline-block bg-accent text-white px-6 py-3 rounded-lg hover:opacity-90 transition-opacity">
                Bläddra produkter
              </a>
            </div>
          `;
          return;
        }

        container.innerHTML = `
          <div class="space-y-4">
            ${orders.map((order: any) => `
              <div class="bg-surface rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
                <div class="flex justify-between items-start mb-4">
                  <div>
                    <h3 class="text-xl font-bold">Order #${order.id.slice(0, 8)}</h3>
                    <p class="text-text-muted">Beställd ${new Date(order.created_at).toLocaleDateString()}</p>
                  </div>
                  <div class="text-right">
                    <p class="text-2xl font-bold text-primary">$${order.total_amount.toFixed(2)}</p>
                    <span class="text-xs px-3 py-1 rounded ${getStatusColor(order.status)}">${order.status.toUpperCase()}</span>
                  </div>
                </div>
                
                <div class="border-t pt-4">
                  <h4 class="font-semibold mb-2">Artiklar:</h4>
                  <ul class="space-y-1">
                    ${(order.order_items || []).map((item: any) => `
                      <li class="flex justify-between text-sm">
                        <span>${item.product_name} x${item.quantity}</span>
                        <span>$${(item.price * item.quantity).toFixed(2)}</span>
                      </li>
                    `).join('')}
                  </ul>
                </div>
                
                <div class="mt-4">
                  <a href="/account/orders/${order.id}" class="text-primary hover:text-accent">
                    Visa detaljer →
                  </a>
                </div>
              </div>
            `).join('')}
          </div>
        `;
      } catch (error) {
        container.innerHTML = '<p class="text-red-500">Fel vid laddning av ordrar. Försök igen senare.</p>';
      }
    }

    function getStatusColor(status: string) {
      const colors: Record<string, string> = {
        pending: 'bg-yellow-100 text-yellow-800',
        paid: 'bg-blue-100 text-blue-800',
        shipped: 'bg-purple-100 text-purple-800',
        delivered: 'bg-green-100 text-green-800',
        cancelled: 'bg-red-100 text-red-800',
      };
      return colors[status] || 'bg-gray-100 text-gray-800';
    }

    renderOrders();
  }
</script>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
</style>

