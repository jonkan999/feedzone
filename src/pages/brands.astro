---
import Layout from '../layouts/Layout.astro';
import { brands } from '../lib/brands';
---

<Layout title="Brands - Feed Zone">
  <div class="container mx-auto px-4 py-12">
    <div class="text-center max-w-2xl mx-auto mb-8">
      <h2 class="text-2xl font-bold text-gray-900 !mb-3 !pt-4">Handla av våra noga utvalda brands</h2>

    </div>

    <div class="top-brands-grid">
      {brands.map((brand) => (
        <div class="brand-card-wrapper" aria-label={`Gå till ${brand.name}`}>
          <a class="brand-card" href={`/brands/${brand.slug}`}>
            <img alt={brand.name} src={brand.logo} loading="lazy" />
          </a>
        </div>
      ))}
    </div>
  </div>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .top-brands-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 1rem;
    max-width: 980px;
    margin: 0 auto;
    padding: 1rem;
    background: color-mix(in srgb, var(--color-primary) 15%, white 85%);
  }

  @media (min-width: 1024px) {
    .top-brands-grid {
      grid-template-columns: repeat(4, minmax(0, 1fr));

    }
  }

  .brand-card-wrapper {
    display: flex;
    justify-content: center;
  }

  .brand-card {
    display: inline-flex;
    width: 100%;
    min-height: 110px;
    align-items: center;
    justify-content: center;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    background: #fff;
  }

  .brand-card:hover {

    border-color: #d1d5db;
    box-shadow: 0 10px 22px rgba(0, 0, 0, 0.06);
  }

  .brand-card img {
    max-width: 120px;
    max-height: 60px;
    width: 100%;
    height: auto;
    object-fit: contain;
    filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.06));
  }
</style>

